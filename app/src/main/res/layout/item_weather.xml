<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/default_margin_halved"
        android:src="@drawable/ic_weather_windy_grey600_48dp" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageIcon"
        android:padding="@dimen/default_margin_halved"
        android:textSize="@dimen/text_size_large"
        tools:text="@string/temperature" />

    <TextView
        android:id="@+id/textValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitle"
        android:layout_toEndOf="@id/imageIcon"
        android:padding="@dimen/default_margin_halved"
        android:textSize="@dimen/text_size_large_3x"
        tools:text="27\u2103" />


    <View
        android:id="@+id/viewDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textValue"
        android:layout_toEndOf="@id/imageIcon"
        android:background="@color/grey" />

</RelativeLayout>